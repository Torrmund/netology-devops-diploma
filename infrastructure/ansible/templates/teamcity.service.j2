[Unit]
Description=TeamCity CI Server
After=syslog.target network.target

[Service]
User=teamcity
Group=teamcity
Type=forking
WorkingDirectory=/opt/teamcity/TeamCity
ExecStart=/bin/bash /opt/teamcity/TeamCity/bin/teamcity-server.sh start
ExecStop=/bin/bash /opt/teamcity/TeamCity/bin/teamcity-server.sh stop
RemainAfterExit=yes
Environment="/etc/default/teamcity-server"
PrivateTmp=yes
RestartSec=5
Restart=on-failure

[Install]
WantedBy=multi-user.target